{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "module": "esnext",
        "lib": ["dom", "es6", "es7"],
        "target": "es5",
        "sourceMap": false,
        "allowJs": true,
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}